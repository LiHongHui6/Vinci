<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lihonghui.vinci">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity android:name="com.lihonghui.vinci.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".user.login.LoginActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".detail.DetailActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.personal.submodule.BucketShotsActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".detail.bucket.BucketActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:screenOrientation="portrait" />
    </application>

</manifest>