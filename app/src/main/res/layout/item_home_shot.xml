<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="156dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:cardCornerRadius="3dp">

        <ImageView
            android:id="@+id/home_shot_thumb"
            android:layout_width="156dp"
            android:layout_height="117dp"
            android:scaleType="centerCrop"
            android:transitionName="sharedView"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_gravity="bottom"
            android:background="@color/colorBlack8">

            <View
                android:layout_width="13dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7.5dp"
                android:background="@mipmap/views_small" />

            <TextView
                android:id="@+id/shot_views_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24.5dp"
                android:textColor="@color/colorWhite3"
                android:textSize="9sp" />

            <View
                android:layout_width="11dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="59.5dp"
                android:background="@mipmap/comments_small" />

            <TextView
                android:id="@+id/shot_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="76.5dp"
                android:textColor="@color/colorWhite3"
                android:textSize="9sp" />

            <View
                android:layout_width="11dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="112.5dp"
                android:background="@mipmap/like_sel_detail" />

            <TextView
                android:id="@+id/shot_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="127.5dp"
                android:textColor="@color/colorWhite3"
                android:textSize="9sp" />

        </FrameLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:layout_gravity="center"
        android:paddingTop="8dp">

        <com.lihonghui.vinci.common.widget.view.CircleImageView
            android:id="@+id/player_avatar"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</LinearLayout>

