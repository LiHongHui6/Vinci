<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp">

        <android.support.v7.widget.CardView
            android:layout_width="110dp"
            android:layout_height="83.5dp"
            android:layout_marginTop="14dp"
            android:background="#fff2f2f2"
            app:cardElevation="2dp"
            app:cardCornerRadius="3dp">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="110dp"
            android:layout_height="83.5dp"
            android:layout_marginTop="7dp"
            android:background="#fff2f2f2"
            app:cardElevation="3dp"
            app:cardCornerRadius="3dp">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="110dp"
            android:layout_height="83.5dp"
            android:transitionName="sharedView"
            app:cardElevation="4dp"
            app:cardCornerRadius="3dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/bucket_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/view_selected"
            android:layout_width="110dp"
            android:layout_height="97.5dp"
            app:cardElevation="5dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorPink5">

            <View
                android:layout_width="22dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:background="@mipmap/choose_bucket"/>

        </android.support.v7.widget.CardView>

    </FrameLayout>

    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">
        <TextView
            android:id="@+id/text_bucket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/colorBlack5"/>

        <TextView
            android:id="@+id/text_shot_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:layout_gravity="center_vertical|right"
            android:textColor="@color/colorBlack5"/>
    </FrameLayout>



</LinearLayout>